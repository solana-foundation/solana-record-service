{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["mocha", "node"]
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules", "dist"]
  }